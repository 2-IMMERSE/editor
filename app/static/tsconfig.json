{
  "compilerOptions": {
    "outDir": ".",
    "noImplicitAny": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "strictNullChecks": true,
    "noStrictGenericChecks": true,
    "keyofStringsOnly": true,
    "types": ["jest"]
  },
  "include": [
    "./js/**/*.tsx",
    "./js/**/*.ts",
    "./__tests__/**/*.tsx",
    "./__tests__/**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}
